<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/formColor"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/ivTeacherPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:src="@drawable/user_pic" />

        <TextView
            android:id="@+id/tvTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivTeacherPic"
            android:text="老師：周二哥"
            android:textColor="@drawable/ic_message_black_24dp"
            android:textSize="20sp" />

        <TextView

            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="@string/text_contactTeacher"
            android:textAlignment="center"
            android:textColor="@color/colorTextBlack"
            android:background="@color/formColor2"
            android:gravity="center"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>