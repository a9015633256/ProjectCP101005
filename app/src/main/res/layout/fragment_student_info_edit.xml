<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/liColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/formColor"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivUserPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/user_pic" />

            <LinearLayout
                android:id="@+id/llPhotoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btStudentInfoTakePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_takePhoto" />

                <Button
                    android:id="@+id/btStudentInfoPickPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pickPhoto" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/liColor"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextBlack"
                    android:text="@string/text_studentId" />

                <EditText
                    android:id="@+id/etStudentInfoId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/text_class"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextBlack"/>

                <EditText
                    android:id="@+id/etStudentInfoClassName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20sp"
                    android:text="@string/text_name" />

                <EditText
                    android:id="@+id/etStudentInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:enabled="false"
                    android:inputType="text"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextBlack"
                    android:text="@string/text_gender" />

                <EditText
                    android:id="@+id/etStudentInfoGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:text="å¥³"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorTextBlack"
                    android:text="@string/text_dayOfBirth" />

                <EditText
                    android:id="@+id/etStudentInfoDayOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20sp"
                    android:text="@string/text_phoneNumber" />

                <EditText
                    android:id="@+id/etStudentInfoPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:inputType="phone"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20dp"
                    android:text="@string/text_address" />

                <EditText
                    android:id="@+id/etStudentInfoAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:text="" />

            </LinearLayout>

            <Button
                android:id="@+id/btUpdateStudentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@color/colorPrimary"
                android:text="@string/text_confirmEditInfo"
                android:textSize="20dp"
                android:textColor="@color/colorTextWhite" />


        </LinearLayout>


    </RelativeLayout>


</ScrollView>