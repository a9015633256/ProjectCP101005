<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="horizontal"
    app:cardCornerRadius="16dp"
    app:cardElevation="9dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/studentImageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/waterfall" />


        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/studentImageview"
            android:text="超級宇宙無敵大瀑布"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/studentPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/studentName"
            android:layout_below="@id/studentName"
            android:text="0985-640-651"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/arrowCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="220dp"
            android:layout_toEndOf="@id/studentImageview"
            android:src="@drawable/ic_call_black_24dp" />

        <ImageView
            android:id="@+id/arrowMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="260dp"
            android:layout_toEndOf="@id/studentImageview"
            android:src="@drawable/ic_message_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>