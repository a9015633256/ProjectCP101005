<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="6dp"
    android:padding="6dp"
    card_view:cardBackgroundColor="@color/formColor"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<ImageView-->
            <!--android:id="@+id/ivSpot"-->
            <!--android:layout_width="250px"-->
            <!--android:layout_height="250px"-->
            <!--android:src="@drawable/fire" />-->
        <Button
            android:id="@+id/btcheckdelete"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/formColor4"/>

        <TextView
            android:id="@+id/tvClassc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="13dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colorTextBlack"
            android:textSize="15dp"
            android:text="班級:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/tvClassc"
            android:textSize="12dp"
            android:text="導師:"/>

        <TextView
            android:id="@+id/tvTeacherr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvClassc"
            android:layout_below="@id/tvClassc"
            android:textSize="12dp"
            android:text="Phone No"
            android:textColor="#555555" />


    </RelativeLayout>
</android.support.v7.widget.CardView>