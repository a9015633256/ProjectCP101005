<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="帳號(信箱):" />

        <EditText
            android:id="@+id/rgAccount"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/state"
            android:clickable="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="帳號重複"
            android:textColor="#FF0000"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password:" />
        <EditText
            android:id="@+id/rgPassword"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password Confirm:" />
        <EditText
            android:id="@+id/rgPasswordConfirm"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名：" />
        <EditText
            android:id="@+id/rgname"
            android:layout_width="310dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Birthday:" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="none"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PhoneNumber:" />
        <EditText
            android:id="@+id/PhoneNumber"
            android:layout_width="260dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="Gender:" />
        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/text_rbFemale" />

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/text_rbMale" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="@string/textSubject" />

        <Spinner
            android:id="@+id/spSubject1"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="190dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="@string/textSubject" />

        <Spinner
            android:id="@+id/spSubject2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="190dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="@string/textSubject" />

        <Spinner
            android:id="@+id/spSubject3"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="190dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btCreat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="建立"
            android:background="@color/Project"/>

        <Button
            android:id="@+id/btBack"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/textBack"
            android:background="@color/Project"/>
    </LinearLayout>



</LinearLayout>